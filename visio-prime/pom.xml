	<build>
		<plugins>
			<plugin>
				<artifactId>maven-jar-plugin</artifactId>
				<version>${versions.plugin.jar}</version>
				<configuration>
					<archive>
						<manifest>
							<mainClass>matvey.thesis.visio.prime.Visio</mainClass>
